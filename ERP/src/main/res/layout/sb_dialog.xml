<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_in_white"
        android:orientation="vertical" 
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/dark_red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请原因"
                android:paddingRight="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/shenqingyuanyin"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/circle_in_white"
                android:focusable="true"
                android:hint="请输入申请原因！"
                android:gravity="top"
                android:padding="5dp"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size" />
        </LinearLayout>
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"

             >
		<View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/views"
            android:background="@color/shallow_black" />
        <Button
            android:id="@+id/button_queding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="申请重新分配"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_login_blue"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>