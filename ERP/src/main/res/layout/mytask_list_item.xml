<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mytask_item_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/mytask_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/is_write_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/out_memu_padding"
            android:background="@drawable/it_event_button_login_red"
            android:text="写日志"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen17s" />
      <TextView
            android:id="@+id/ischecks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_red"
            android:paddingLeft="20dp"
            android:text="x"
            android:textSize="20sp"
            android:layout_margin="10dp" />

    </LinearLayout>
                        <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@mipmap/divider_list" />
</LinearLayout>