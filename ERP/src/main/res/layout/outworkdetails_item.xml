<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/clientname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/clientaddress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:text="长沙市芙蓉区政府"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/isbrush_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingRight="5dp"
            android:text="未打卡"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/brushaddress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="长沙市芙蓉区政府"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/brush_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="14sp" 
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/it_event_button_login_red"
            android:text="打卡"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/brushtime_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:text="2016-1-22 12:12:22"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>