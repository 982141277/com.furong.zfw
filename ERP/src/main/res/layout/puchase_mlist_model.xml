<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/puchase_mprod_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="名称:华为防火墙"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/puchase_mneed_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="数量:10包"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
        <TextView
            android:id="@+id/puchase_mprod_Model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="型号:vi-DAPOBOB"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/puchase_msupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="淘宝网"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
        <TextView
            android:id="@+id/puchase_munivalent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
        <TextView
            android:id="@+id/puchase_mbill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="发票"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
        <TextView
            android:id="@+id/puchase_mpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="在线付款"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>


