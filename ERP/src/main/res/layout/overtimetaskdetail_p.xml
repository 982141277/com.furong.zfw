<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circular_bead"
    android:orientation="vertical"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加班人："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/overtimetaskdetail_accompanyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/out_memu_padding"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14s" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加班详情："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/overtimetaskdetail_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
                android:padding="5dp"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dimen14s" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审批状态："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/overtime__dialog_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/overtime__rgs_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textSize="@dimen/dimen14s"
                    android:textColor="@color/black"
                    android:text="批准" />

                <RadioButton
                    android:id="@+id/overtime__rgs_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:textColor="@color/black"
                   	android:textSize="@dimen/dimen14s"
                    android:text="否决" />
                 <RadioButton
                    android:id="@+id/overtime__rgs_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   	android:textColor="@color/black"
                   	android:textSize="@dimen/dimen14s"
                    android:text="退回重写" />
            </RadioGroup>
        </LinearLayout>

       


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="效果评估："
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/overtask_detail_edits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
                android:hint="请进行效果评估！"
                android:maxLines="4"
                android:padding="5dp"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/dimen14s" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_approval"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_login_red"
            android:text="@string/shenpia"
            android:textColor="@color/white"
            android:textSize="@dimen/MYbz" />
    </LinearLayout>

</LinearLayout>