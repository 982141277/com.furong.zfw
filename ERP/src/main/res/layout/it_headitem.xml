<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/it_text_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shalow_button_dialog"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/shijian"
            android:gravity="right"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="事件处理"
            android:textColor="@color/_red"
            android:textSize="17sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="20dp"
            android:background="@mipmap/jiankuohao"
            android:gravity="right"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/it_text_three"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:background="@color/shallow_black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/daishijian"
            android:gravity="right"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp" >

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待处理事件"
                android:textColor="@color/text_graya"
                android:textSize="@dimen/dimen17s" />

            <LinearLayout
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/count"
                android:layout_centerVertical="true"
                android:background="@mipmap/xiaoxi1" >

                <TextView
                    android:id="@+id/it_headitem_text_cont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/it_textview_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="10dp"
            android:text="事件处理"
            android:textColor="@color/text_graya"
            android:textSize="@dimen/dimen17s" />

        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@mipmap/goright" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/views"
        android:background="@color/shallow_black" />

</LinearLayout>