<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
       <TextView
            android:id="@+id/leixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_graya"
            android:textSize="14sp" />

    	<ImageView
		    android:id="@+id/imgs"
		    android:layout_width="15dp"
		    android:layout_height="15dp"

		    android:layout_toRightOf="@+id/leixin"
		    android:layout_centerVertical="true"
		    android:background="@mipmap/xiaoxi"
		    android:layout_marginRight="5dp" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toLeftOf="@+id/time"
            android:src="@mipmap/xinxin"
            android:layout_centerVertical="true"            
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:layout_centerVertical="true"    
            android:textColor="@color/blackss" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/text_gray2" />

</LinearLayout>