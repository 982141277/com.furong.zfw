<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    


        <LinearLayout
            android:id="@+id/mytask_report_detail_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <TextView
                android:id="@+id/mytask_report_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_graya"
                android:textSize="14sp" />
          <TextView
				android:id="@+id/mytask_report_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_graya"
                android:layout_marginLeft="20dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/mytask_report_detail_linear" >

            <TextView
				android:id="@+id/mytask_report_detail_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grays"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/mytask_report_fulltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_red"
                android:text="全文"
                android:textSize="13sp" />
		</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/mytask_report_detail_linear"  >
            <TextView
 				android:id="@+id/mytask_report_detail_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_grays"
                android:visibility="gone"
                android:textSize="13sp" />

            <TextView
				android:id="@+id/mytask_report_stoptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_red"
                android:visibility="gone"
                android:text="收起"
                />

    </LinearLayout>
</RelativeLayout>
