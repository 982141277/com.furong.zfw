<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <include
          	android:id="@+id/rela_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/headtitle" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_above="@+id/fools"
        android:layout_below="@+id/rela_header" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/applicant"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:id="@+id/memusq_shenqingren"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/go_out_memu1"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:id="@+id/memusq_waichushiyou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                
                  <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2" />
                  
                <LinearLayout
                     android:id="@+id/yujibaifang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="预计拜访："
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:id="@+id/textyujikehu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>
                                  <View
                                      android:id="@+id/yujibaifang1"
                                      android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2" />
                <LinearLayout
                    android:id="@+id/shijibaifang"
                     android:visibility="gone" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding" >

                    <TextView
                        
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="实际拜访："
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未处理"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>
                <View
                    android:id="@+id/shijibaifang1"
                     android:visibility="gone" 
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/go_out_time_s"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:id="@+id/memusq_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/car_fare"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:id="@+id/memusq_yujijiaotongfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2"
                    />

                <LinearLayout
                    android:id="@+id/shijijiaotongfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone"  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/car_fares"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:id="@+id/shijijiaotongfei_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                    android:id="@+id/sqview1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2"
                    android:visibility="gone"  />

                <LinearLayout
                    android:id="@+id/shibaojiaotongfei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone"  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/car_faress"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                       	android:id="@+id/shibaojiaotongfei_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                    android:id="@+id/sqview2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2"
                    android:visibility="gone"  />

                <LinearLayout
                    android:id="@+id/waichuxiangqing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone"  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/go_out_detail"
                        android:textSize="@dimen/out_memu_big_size" />

                    <TextView
                        android:textIsSelectable="true"
                        android:id="@+id/waichuxiangqing_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细情况已经填写 "
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                    android:id="@+id/sqview3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2"
                    android:visibility="gone"  />

                <LinearLayout
                    android:id="@+id/tianxie1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/dark_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="实际交通费用 ："
                        android:textSize="@dimen/out_memu_big_size" />

                    <EditText
                        android:id="@+id/edit_t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_in_white"
                        android:focusable="true"
                        android:hint="请输入实际交通费！"
                        android:maxLines="1"
                        android:padding="5dp"
                        android:maxLength="5"
                        android:phoneNumber="true"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_large_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/out_memu_padding"
                        android:text="@string/yuan"
                        android:textSize="@dimen/out_memu_big_size" />
                </LinearLayout>

                <View
                     android:id="@+id/sqview4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/tianxie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/dark_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="实际乘车路线 ："
                        android:textSize="@dimen/out_memu_big_size" />

                    <EditText
                         android:id="@+id/edit_t2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_in_white"
                        android:focusable="true"
                        android:hint="请实际乘车路线！"
                        android:maxLines="3"
                        android:padding="5dp"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_large_size" />
                </LinearLayout>

                <View
                     android:id="@+id/sqview5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/tianxie3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/out_memu_padding"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/dark_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/out_memu_padding"
                        android:text="@string/go_out_detail"
                        android:textSize="@dimen/out_memu_big_size" />

                    <EditText
                         android:id="@+id/edit_t3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_in_white"
                        android:focusable="true"
                        android:hint="请输入外出详情！"
                        android:maxLines="3"
                        android:padding="5dp"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_large_size" />
                </LinearLayout>

                <View
                    android:id="@+id/sqview6"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/views"
                    android:background="@color/text_gray2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/yiwancheng_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:visibility="gone" />
        </RelativeLayout>
        
    </ScrollView>

          <include
             android:id="@+id/fools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/last_fools" />

</RelativeLayout>