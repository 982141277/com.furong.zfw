<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/memulist_heading"
        android:background="@color/dark_blue"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="新建事件"
            android:textColor="@color/white"
            android:textSize="@dimen/memulist_text_size" />

        <ImageView
            android:layout_width="@dimen/memulist_pic_size"
            android:layout_height="@dimen/memulist_pic_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@mipmap/goback" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="事件来源" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dark_blue" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="事件类型" />

                <TextView
                    android:id="@+id/think_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请选择事件类型"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="事件标题" />

            <EditText
                android:id="@+id/shijian_biaoti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:hint="请输入标题！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:id="@+id/lianxidianhua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="联系电话" />

            <EditText
                android:id="@+id/mobile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:inputType="number"
                android:hint="请输入联系电话！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:id="@+id/bangongdizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="办公地址" />

            <EditText
                android:id="@+id/bangongdizhi_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:hint="请输入办公地址！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="运维组" />

				<TextView
				    android:id="@+id/area_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="优先级" />

                <Spinner
                    android:id="@+id/spinner_yxj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/shallow_blue" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:id="@+id/yonghu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="用户" />

            <EditText
                android:id="@+id/yonghu_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:hint="请输入用户！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:id="@+id/lianxishouji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="联系手机" />

            <EditText
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:inputType="number"
                android:hint="请输入联系手机号码！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:id="@+id/suoshudanwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="所属单位" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:hint="请输入所属单位名称！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:id="@+id/zhiwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="职务" />

            <EditText
                android:id="@+id/position_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:hint="请输入职位名称！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="事件描述" />

            <EditText
                android:id="@+id/event_describe_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_in_white"
				android:maxLines="3"
				android:padding="5dp"
				android:focusable="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_large_size"
                android:hint="请填写详细的事件描述！" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:id="@+id/lingdao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="是否领导" />

                <Spinner
                    android:id="@+id/spinner_sf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/shallow_blue" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/dark_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="分配给" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/shallow_blue" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="协同人" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/shallow_blue" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/views"
                android:background="@color/shallow_black" />

             <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="短信提醒" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/views"
                    android:background="@color/shallow_black" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal" >
                <Button
                    android:id="@+id/baocun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提交" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>