<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/out_memu_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/out_memu_padding"
            android:text="申请人："
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/requisition_applicant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>


                <View
                   	android:id="@+id/img_project"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/text_gray2" />
    <LinearLayout
        android:id="@+id/linear_project"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/out_memu_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/out_memu_padding"
            android:text="项目名称："
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/requisition_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>

                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/text_gray2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/out_memu_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/out_memu_padding"
            android:text="请购物品："
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/requisition_article_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>

                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/text_gray2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/out_memu_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/out_memu_padding"
            android:text="请购原因："
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/requisition_cause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>

                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/text_gray2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/out_memu_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/out_memu_padding"
            android:text="需用时间："
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/requisition_need_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>

                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/text_gray2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/out_memu_padding" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/out_memu_padding"
            android:text="总计金额："
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />

        <TextView
            android:id="@+id/requisition_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/out_memu_big_size" />
    </LinearLayout>

                    <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom"
                    android:background="@color/text_gray2" />

</LinearLayout>