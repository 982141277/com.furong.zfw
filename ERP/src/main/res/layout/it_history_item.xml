<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/memulist_model" >
    
 	<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/memulist_model"
         >

		<TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_graya"
            android:textSize="@dimen/dimen14s"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/state_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_graya"
            android:layout_toRightOf="@+id/name"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen14s"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_grays"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dimen13s"
            android:gravity="right" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_clxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/memulist_model" >
        <TextView
            android:id="@+id/clxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_graya"
            android:textSize="@dimen/dimen14s"
			/>
        
    </LinearLayout>
</LinearLayout>
