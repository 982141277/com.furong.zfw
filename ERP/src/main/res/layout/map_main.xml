<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<!--  <com.baidu.mapapi.map.MapView  
    android:id="@+id/bmapView"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:clickable="true" /> -->
    <RelativeLayout
        android:id="@+id/map_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/memulist_heading"
        android:background="@color/dark_blue"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_backs3"
            android:layout_width="@dimen/memulist_pic_size"
            android:layout_height="@dimen/memulist_pic_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/goback"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="地图定位"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/rlly_map"
        android:layout_width="match_parent"
        android:layout_below="@+id/map_relative"
        android:layout_height="match_parent" >
        
    </RelativeLayout>
    
    <Button
        android:visibility="gone"
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前定位"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"
        >
        
    </Button>
</RelativeLayout>
